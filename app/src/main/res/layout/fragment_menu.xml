<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/color_bg"
    tools:context="com.pratham.assessment.ui.login.MainActivity">

    <RelativeLayout
        android:id="@+id/topPanel"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:layout_alignParentTop="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:textColor="@color/colorWhiteDark"
            android:textSize="@dimen/_18sdp"
            android:textStyle="bold" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/topPanel">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingHorizontal="@dimen/_40sdp"
            android:weightSum="6">


            <ImageButton
                android:id="@+id/ib_age3to6"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_130sdp"
                android:layout_gravity="center"
                android:layout_marginVertical="@dimen/_10sdp"
                android:background="@drawable/gradiance_bg"
                android:elevation="7dp"
                android:gravity="center"
                android:padding="@dimen/_10sdp"
                android:scaleType="centerInside"
                android:src="@drawable/storytelling" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/_5sdp"
                android:elevation="@dimen/_7sdp"
                android:text="Age 3 to 6"
                android:layout_marginTop="@dimen/_15sdp"
                android:background="@drawable/radio_button_bg"
                android:padding="@dimen/_5sdp"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/_15sdp" />

            <ImageButton
                android:id="@+id/ib_age8to14"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_130sdp"
                android:layout_below="@+id/ib_age3to6"
                android:layout_gravity="center"
                android:layout_marginVertical="@dimen/_10sdp"
                android:background="@drawable/gradiance_bg_2"
                android:elevation="7dp"
                android:padding="@dimen/_10sdp"
                android:scaleType="centerInside"
                android:src="@drawable/gitl_reading" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ib_age3to6"
                android:elevation="@dimen/_7sdp"
                android:text="Age 8 to 14"
                android:padding="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:background="@drawable/radio_button_bg"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/_15sdp" />

        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_admin"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentRight="true"
        android:background="@drawable/admin_btn_bg">

        <ImageButton
            android:id="@+id/btn_admin"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:background="@null"
            android:scaleType="fitCenter"
            android:src="@drawable/admin" />
    </RelativeLayout>

</RelativeLayout>