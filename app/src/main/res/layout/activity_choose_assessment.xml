<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentStart="true"
    android:fitsSystemWindows="true">

    <RelativeLayout xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_bg"
        tools:context=".ui.choose_assessment.ChooseAssessmentActivity">

        <!--<android.support.v7.widget.Toolbar
            android:id="@+id/my_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="4dp" >-->


        <RelativeLayout
            android:id="@+id/title_bar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_120sdp">

            <ImageButton
                android:id="@+id/menu_icon"
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_35sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/ripple_round"
                android:src="@drawable/ic_menu" />

            <TextView
                android:id="@+id/tv_hey"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_toRightOf="@+id/menu_icon"
                android:text="Hey,"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/_22sdp" />

            <TextView
                android:id="@+id/tv_choose_assessment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_hey"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_toRightOf="@+id/menu_icon"
                android:text="Choose the assessment.."
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/_17sdp" />

            <Spinner
                android:id="@+id/spinner_choose_lang"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_25sdp"
                android:layout_below="@+id/tv_choose_assessment"
                android:layout_margin="@dimen/_5sdp"
                android:background="@drawable/gradient_spinner" />


        </RelativeLayout>
        <!--</android.support.v7.widget.Toolbar>-->


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/title_bar">
            <!--android:layout_marginTop="@dimen/minus_margin"-->
            <android.support.v7.widget.RecyclerView
                android:id="@+id/choose_assessment_recycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:clipToPadding="false"
                android:gravity="center"
                android:layoutAnimation="@anim/layout_fall_down"
                android:scrollbars="vertical" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_Profile"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/admin_btn_bg"
            android:visibility="gone">

            <ImageButton
                android:id="@+id/btn_Profile"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:background="@null"
                android:scaleType="fitCenter"
                android:src="@drawable/b2" />
        </RelativeLayout>
        <!-- Your contents -->
    </RelativeLayout>
    <android.support.design.widget.NavigationView
        android:id="@+id/navigation"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/navigation_header_layout"
        app:menu="@menu/menu" />
</android.support.v4.widget.DrawerLayout>

